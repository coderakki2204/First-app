<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgJonDepp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akash"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@id/imgJonDepp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aakashlucky7992@gmail.com"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgJonDepp"
        android:layout_below="@id/txtName"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="79921178885"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgJonDepp"
        android:layout_below="@id/txtEmail"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/butMorInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgJonDepp"
        android:text="more information"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="#495DD8"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/butExitApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#B50A0A"
        android:text="exit the app"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>